#Write a program to compare 2 strings with and without ignoring case 

package Assessment3;

import java.util.Scanner;

public class StringFunctions {
    public static void main(String args[]){
        Scanner s=new Scanner(System.in);
        System.out.println("enter the 1st String: ");
        String s1,s2;
        s1=s.next();
        System.out.println("enter the 2nd String: ");
        s2=s.next();
        System.out.println("without equals ignore case:"+s1.equals(s2));
        System.out.println("with equals ignore case:"+s1.equalsIgnoreCase(s2));
    }
}
